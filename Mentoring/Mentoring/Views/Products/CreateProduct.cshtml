@model CreateEditProductViewModel

<h2>Create</h2>
<form method="post">
	<input type="hidden" asp-for="ProductId"/>
	<div class="form-group">
		<label asp-for="Category"></label>
		<select class="form-control" asp-for="CategoryId" asp-items="@Model.Category"></select>
		<span asp-validation-for="Category"></span>
	</div>
	<div class="form-group">
		<label asp-for="Supplier"></label>
		<select class="form-control" asp-for="SupplierId" asp-items="@Model.Supplier"></select>
		<span asp-validation-for="Supplier"></span>
	</div>
	<div class="form-group">
		<label asp-for="ProductName"></label>
		<input class="form-control" asp-for="ProductName" />
		<span asp-validation-for="ProductName"></span>
	</div>
	<div class="form-group">
		<label class="form-check-input" asp-for="Discontinued"></label>
		<input class="form-check-input" asp-for="Discontinued" />
		<span asp-validation-for="Discontinued"></span>
	</div>
	<div class="form-group">
		<label asp-for="QuantityPerUnit"></label>
		<input class="form-control" asp-for="QuantityPerUnit" />
		<span asp-validation-for="QuantityPerUnit"></span>
	</div>
	<div class="form-group">
		<label asp-for="ReorderLevel"></label>
		<input class="form-control" asp-for="ReorderLevel" />
		<span asp-validation-for="ReorderLevel"></span>
	</div>
	<div class="form-group">
		<label asp-for="UnitPrice"></label>
		<input class="form-control" asp-for="UnitPrice" />
		<span asp-validation-for="UnitPrice"></span>
	</div>
	<div class="form-group">
		<label asp-for="UnitsInStock"></label>
		<input class="form-control" asp-for="UnitsInStock" />
		<span asp-validation-for="UnitsInStock"></span>
	</div>
	<div class="form-group">
		<label asp-for="UnitsOnOrder"></label>
		<input class="form-control" asp-for="UnitsOnOrder" />
		<span asp-validation-for="UnitsOnOrder"></span>
	</div>
	<input type="submit" name="save" />
</form>
