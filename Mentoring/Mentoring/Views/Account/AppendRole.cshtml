@model AppendRoleModel

<div class="row">
	<div class="col-xs-8 col-xs-offset-2">
		<h1 class="text-center">Append role to user</h1>
		<form asp-action="AppendRole" method="post" class="form-horizontal">
			<div class="form-group">
				<label asp-for="RoleName" class="col-sm-2">Role Name</label>
				<div class="col-sm-10">
					<input asp-for="RoleName" class="form-control" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Email" class="col-sm-2"></label>
				<div class="col-sm-10">
					<input asp-for="Email" class="form-control" />
				</div>
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
			<div asp-validation-summary="All"></div>
		</form>
	</div>
</div>